{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src/",
    "paths": {
      "@config/*": [ "config/*" ],
      "@errors/*": [ "errors/*" ],
      "@modules/*": [ "modules/*" ],
      "@shared/*": [ "shared/*" ],
      "@utils/*": [ "utils/*" ]
    },
    "types": [ "node", "jest" ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
